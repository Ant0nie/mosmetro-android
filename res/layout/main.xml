<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_description1" android:layout_gravity="center_horizontal"
            android:text="@string/text_description1" android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/text_description2" android:layout_gravity="center_horizontal"
              android:text="@string/text_description2"
              android:layout_below="@+id/text_description1" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginTop="5dp"
              android:layout_marginRight="10dp" android:layout_marginBottom="5dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text_description3"
              android:layout_gravity="center_horizontal" android:text="@string/text_description3"
              android:layout_below="@+id/text_description2" android:layout_centerHorizontal="true"
              android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp"
              android:layout_marginBottom="5dp"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
              android:id="@+id/text_last_success" android:layout_gravity="center_horizontal"
              android:layout_marginBottom="5dp" android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_below="@+id/text_description3"
              android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/debug_activity_name"
            android:id="@+id/button_debug" android:onClick="button_debug" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
</RelativeLayout>